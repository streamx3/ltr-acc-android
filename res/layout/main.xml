<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Saved account"
                android:id="@+id/textView7"
                android:paddingLeft="20dp"
                android:layout_gravity="center"/>
        <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_saved_login_select"
                android:layout_weight="1"
				android:dropDownWidth="fill_parent"
				android:focusable="false"
				android:minWidth="100dp"/>
		<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Del"
				android:id="@+id/button_delete_account"
                android:layout_gravity="center_vertical|left"
                android:textAlignment="center"
                android:onClick="handleDeleteButton"/>
	</LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="IP"
                android:id="@+id/textView"
                android:paddingLeft="20dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText_ip"
                android:layout_weight="0.18"
                android:hint="169.254.0.1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Port"
                android:id="@+id/textView2"
                android:paddingLeft="20dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText_port"
                android:layout_weight="1"
                android:text="3306"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="User"
                android:id="@+id/textView3"
                android:paddingLeft="20dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText_user"
                android:layout_weight="1"
				android:hint="mysql_username"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Database"
                android:id="@+id/textView4"
                android:paddingLeft="20dp"
				android:hint="mysq_database"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText_database"
                android:layout_weight="1"
				android:hint="mysq_database"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Table"
                android:id="@+id/textView5"
                android:paddingLeft="20dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText_table"
                android:layout_weight="1"
				android:hint="mysq_table"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Password"
                android:id="@+id/textView6"
                android:paddingLeft="20dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/editText_password"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
        <Space
                android:layout_width="100dp"
                android:layout_height="match_parent"
                />
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/checkBox_save"
                android:padding="20dp"
                android:checked="false"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:id="@+id/button_connect"
                android:onClick="onConnectClicked"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:id="@+id/button_exit"
                android:onClick="onExitClicked"/>
    </LinearLayout>
</LinearLayout>
